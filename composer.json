    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Damien Gavard",
            "email": "damien.gavard@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "symfony/console": "~2.6"
    },
    "require-dev": {
        "symfony/finder": "~2.6",
        "phpunit/phpunit": "~4.5",
        "fabpot/php-cs-fixer": "~1.5"
    },
    "autoload": {
        "psr-4": {
            "DAG\\Xml\\Cropper\\": "src/DAG/Xml/Cropper"
        }
